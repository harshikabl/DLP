<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/size_300px"
        android:layout_height="match_parent"
        android:gravity="center">

        <View
            android:id="@+id/topSpece"
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/languageIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topSpece"
            android:gravity="center"
            android:text="icon"
            android:textColor="#e60000"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/chooseLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/languageIcon"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Choose Language"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chooseLanguage"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit amet, consectetur dolor sit"
            android:textColor="#000"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="70dp" />

        <LinearLayout
            android:id="@+id/done_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/doneLayout"
                android:layout_width="@dimen/size_180px"
                android:layout_height="wrap_content"
                android:background="@drawable/done_corner_round"
                android:gravity="center">

                <TextView
                    android:id="@+id/tickIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ti"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dimValue_13"
                    android:text="Done"
                    android:textColor="#fff"
                    android:textSize="22sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/done_linear"
            android:background="#00000000" />

    </RelativeLayout>

</RelativeLayout>