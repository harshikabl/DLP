<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_layout_titleBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimValue_10"
            android:layout_marginTop="@dimen/dimValue_16"
            android:gravity="center"
            android:text="Are you sure you want to quit?"
            android:textColor="#4a4d4e"
            android:textSize="@dimen/dimTextSize_30" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimValue_16"
            android:gravity="center"
            android:text="your progress won't be saved!!"
            android:textColor="#4a4d4e"
            android:textSize="@dimen/dimTextSize_18" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_16"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/quit_layout"
                android:layout_width="@dimen/size_120px"
                android:layout_height="@dimen/size_35px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quit_text"
                    android:layout_width="@dimen/size_85px"
                    android:layout_height="match_parent"
                    android:background="@color/colorRad"
                    android:gravity="center"
                    android:padding="@dimen/dimValue_6"
                    android:text="QUIT"
                    android:textColor="#fff"
                    android:textSize="@dimen/dimTextSize_18" />

                <TextView
                    android:id="@+id/quit_icon"
                    android:layout_width="@dimen/size_35px"
                    android:layout_height="match_parent"
                    android:background="@color/colorDrakRed"
                    android:gravity="center"
                    android:padding="@dimen/dimValue_6"
                    android:text="OK"
                    android:textColor="#fff"
                    android:textSize="@dimen/dimTextSize_18" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>