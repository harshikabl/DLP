<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="dlp.bluelupin.dlp.Fragments.DownloadingFragment">

    <LinearLayout
        android:id="@+id/downloadingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00B3C4"
        android:orientation="vertical"
        android:visibility="visible"
        android:paddingBottom="@dimen/dimValue_20"
        android:paddingLeft="@dimen/dimValue_10"
        android:paddingRight="@dimen/dimValue_10"
        android:paddingTop="@dimen/dimValue_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uploadMsg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:paddingTop="@dimen/dimValue_10"
                android:text="Downloading Updates"
                android:textColor="#fff"
                android:textSize="@dimen/dimTextSize_20" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimValue_10">

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="#e60000"
                    android:textSize="@dimen/dimTextSize_16" />

                <RelativeLayout
                    android:id="@+id/cancelIconlayout"
                    android:layout_width="@dimen/size_27px"
                    android:layout_height="@dimen/size_27px"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimValue_10"
                    android:background="@drawable/circle"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/cancelIcon"
                        android:layout_width="@dimen/size_27px"
                        android:layout_height="@dimen/size_27px"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="@dimen/dimTextSize_16" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimValue_10"
            android:paddingTop="@dimen/dimValue_10"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
            android:textColor="#fff"
            android:textSize="@dimen/dimTextSize_18" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:progressDrawable="@drawable/custom_progressbar" />
    </LinearLayout>


</FrameLayout>
